<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen8"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen30"
            android:src="@mipmap/israted" />

        <TextView
            android:id="@+id/tv_avgRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen5"
            android:text="4.7"
            android:textColor="@color/text_color_light"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tv_totalRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:text="500 ratings"
            android:textSize="@dimen/txt_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen20">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <ImageView
                android:id="@+id/iv_filledRating5"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_noRatings5"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="0.5"
                android:text="(400)" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen25"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3"
            android:weightSum="1.5">

            <ImageView
                android:id="@+id/iv_filledRating4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen8"

                android:background="@color/themeColor"

                />

            <TextView
                android:id="@+id/tv_noRatings4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="0.5"
                android:text="(400)" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen35"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3"
            android:weightSum="1.5"

            >

            <ImageView
                android:id="@+id/iv_filledRating3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/themeColor"
                android:layout_marginLeft="@dimen/dimen8"

                />

            <TextView
                android:id="@+id/tv_noRatings3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="0.5"
                android:text="(400)" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen45"
        android:orientation="horizontal"

        >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3"
            android:weightSum="1.5">

            <ImageView
                android:id="@+id/iv_filledRating2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@color/themeColor"
                android:layout_marginLeft="@dimen/dimen8"

                />

            <TextView
                android:id="@+id/tv_noRatings2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="0.5"
                android:text="(400)" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen55"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/star_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen3"
            android:weightSum="1.5">

            <ImageView
                android:id="@+id/iv_filledRating1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen8"
                android:background="@color/themeColor" />

            <TextView
                android:id="@+id/tv_noRatings1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_weight="0.5"

                android:text="(400)" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
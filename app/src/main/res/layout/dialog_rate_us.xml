<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_rate"
    android:background="@drawable/lighttransparentscreen">


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_height="wrap_content"

        android:background="@drawable/rouncounerbox">
        <TextView
            android:id="@+id/tv_rate_us"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10"
            android:gravity="center"
            android:textColor="@color/toolbartitlecolor"
            android:text="Rate Us 5 Stars, Thanks!"
            android:textSize="@dimen/txt_large"/>
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_margin="@dimen/dimen10"
            android:layout_below="@+id/tv_rate_us"
            android:layout_width="wrap_content"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:numStars="5"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:rating="5"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_ok"
            android:layout_below="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10"
            android:gravity="center"
            android:textColor="@color/toolbartitlecolor"
            android:text="Ok"
            android:textSize="@dimen/txt_large"/>





    </RelativeLayout>





</RelativeLayout>
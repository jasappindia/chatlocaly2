<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen1"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="23"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dimen5"
            android:text="Olive Oil with car and many more ohahjsahhjllahallhjhajhfjhha"
            android:textColor="@color/text_light_black"
            android:textSize="@dimen/txt_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65">

            <ImageView
                android:id="@+id/iv_prodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen10"
                android:scaleType="fitCenter"
                android:src="@mipmap/tata_salt" />

            <TextView
                android:id="@+id/tv_discount_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="@dimen/dimen8"
                android:background="@drawable/discount"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="12.30% off"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_weight="12"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_proPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:singleLine="true"
                android:text="Rs 1,346"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_medium" />

            <TextView
                android:id="@+id/tv_prodiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"
                android:gravity="bottom|center_horizontal"
                android:singleLine="true"
                android:text="51% off"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>


































































































































































































































































































































































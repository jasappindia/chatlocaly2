<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"

    android:layout_marginLeft="@dimen/dimen2"
    android:layout_marginRight="2dp"
    android:layout_height="wrap_content">



    <com.chatlocaly.textview.TextViewReguler
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="@dimen/dimen5"
        android:paddingRight="@dimen/dimen5"
        android:paddingBottom="@dimen/dimen5"

        android:textSize="@dimen/txt_large"
        android:text="Aashirvad Atta Whole Wheat,10 kg pouch "
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/dimen5"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cart"
        android:tint="@color/text_color_light"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.chatlocaly.textview.TextViewReguler
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen5"
            android:paddingBottom="@dimen/dimen5"
            android:textSize="@dimen/txt_small"
            android:text="Rs 12 "
            android:layout_height="wrap_content" />

        <com.chatlocaly.textview.TextViewReguler
            android:id="@+id/tv_discount_text"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen5"
            android:paddingBottom="@dimen/dimen5"
            android:textSize="@dimen/txt_extra_small"
            android:textColor="@color/colorAccent"
            android:text="330 13 % off"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
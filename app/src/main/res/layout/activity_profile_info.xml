<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen20"
        android:background="@color/white"
        android:orientation="vertical">

    <com.chatlocaly.textview.TextViewReguler
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen30"
        android:gravity="center"
        android:text="@string/str_yourprofile"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_large" />

    <com.chatlocaly.textview.TextViewReguler
        android:id="@+id/tv_otpverifyLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen20"
        android:gravity="center"
        android:text="@string/str_profileTagLine"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/txt_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20"
        android:orientation="horizontal">

        <com.chatlocaly.ui.RoundedImageView
            android:id="@+id/iv_profilePic"
            android:layout_width="@dimen/dimen80"
            android:layout_height="@dimen/dimen80"
            android:layout_marginLeft="@dimen/dimen20"
            android:src="@drawable/user_icon" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLength="40"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen10"
            android:inputType="text"
            android:hint="Enter Your Name"
            android:paddingLeft="@dimen/dimen10"
            android:textColorHint="@color/light_gray" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20"
        android:paddingTop="@dimen/dimen2"
        android:text="@string/str_takePhoto"
        android:textColor="@color/white" />

    <com.chatlocaly.textview.TextViewReguler
        android:id="@+id/tv_chooseGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen20"
        android:gravity="center"
        android:padding="@dimen/dimen5"
        android:text="@string/str_chooseGallery"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/txt_small" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@color/button_back"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="@dimen/dimen5"
        android:paddingRight="@dimen/dimen5"
        android:text="@string/str_nxt"
        android:textColor="@color/text_color_light" />

</LinearLayout>
</ScrollView>